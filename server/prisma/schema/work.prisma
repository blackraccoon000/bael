// 作業内容に関するモデル
model Work {
  id        Int      @id @default(autoincrement()) // 作業ID
  date      DateTime // 作業日
  time      Int // 作業時間
  userId    Int // ユーザID
  user User @relation(fields: [userId], references: [id]) // ユーザ情報
  invoiceId Int // 請求ID
  invoice Invoice @relation(fields: [invoiceId], references: [id]) // 請求情報
  payment   Int     @default(0) // 支払い金額
  approval　Boolean @default(false) // 承認フラグ
  comment   String? // コメント
  disabled  Boolean @default(false) // 無効フラグ
  createdAt DateTime @default(now()) // 作成日
  updateAt DateTime @default(now()) // 更新日
}